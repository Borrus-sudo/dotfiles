{
    /*
       Editor appearance config
    */

    "editor.fontFamily": "Cascadia Code",
    "files.autoSave": "afterDelay",
    "editor.cursorStyle": "block",
    "workbench.sideBar.location": "right",
    "workbench.iconTheme": "vscode-icons",
    "workbench.productIconTheme": "icons-carbon",
    "workbench.colorTheme": "Just Black",
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },

    /* 
       Formatter and Indentation config
    */

    "notebook.defaultFormatter": "esbenp.prettier-vscode",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.tabWidth": 4,
    "prettier.singleQuote": true,
    "[rust]": {
        "editor.defaultFormatter": "jinxdash.prettier-rust"
    },
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.fontWeight": "normal",
    "editor.detectIndentation": false,
    "editor.autoIndent": "advanced",
    "editor.renderLineHighlight": "none",

    /* 
       Color Optimizations
    */

    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": ["keyword.operator", "punctuation.separator"],
                "settings": {
                    "fontStyle": ""
                }
            },
            {
                "scope": ["comment", "comment.block"],
                "settings": {
                    "fontStyle": "italic",
                    "foreground": "#F5F"
                }
            },
            {
                "name": "envKeys",
                "scope": "string.quoted.double.env,source.env,constant.numeric.env",
                "settings": {
                    "foreground": "#19354900"
                }
            },
            {
                "scope": "entity.name",
                "settings": {
                    "foreground": "#B9BB25",
                    "fontStyle": "bold"
                }
            }
        ]
    },
    "workbench.colorCustomizations": {
        //   "editor.foreground": "#FFFFFF",
        // "editor.guides.indentation": false
        "editorIndentGuide.background1": "#292D3E",
        "editorIndentGuide.activeBackground1": "#292D3E",
        "editorLineNumber.activeForeground": "#292D3E",
        "editorLineNumber.foreground": "#292D3E"
    },

    /* 
       Git Stuff
    */

    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,

    /* 
       Terminal Stuff
    */

    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.enableMultiLinePasteWarning": "never",

    /* 
       Random Stuff
    */

    "workbench.startupEditor": "none",
    "svelte.enable-ts-plugin": true,
    "redhat.telemetry.enabled": false
}
